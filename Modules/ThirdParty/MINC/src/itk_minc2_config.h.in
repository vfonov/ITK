#ifndef itk_minc2_config_h
#define itk_minc2_config_h

/* Use the LIBMINC library configured for ITK.  */
#cmakedefine ITK_USE_SYSTEM_MINC

#ifndef HAVE_MINC1
#cmakedefine HAVE_MINC1
#endif /*HAVE_MINC1*/

namespace itk
{
    class MINCIOEnums
    {
        public:

        enum class MINCIOCoordinateFIX : uint8_t
        {
            /** Ignore MINC coordinate system (Legacy behavior)*/
            MINCIOCoordinateLegacy = 1,
            /** Convert MINC coordinate system to LPS (Default)*/
            MINCIOCoordinateRASToLPS = 0
        };
    };

    #if !defined(ITK_LEGACY_REMOVE)
    using MINCIOCoordinateFIX = MINCIOEnums::MINCIOCoordinateFIX;
    #endif  

};

#define ITK_MINC_IO_COORDINATE_FIX_DEFAULT MINCIOEnums::MINCIOCoordinateFIX::MINCIOCoordinate@ITK_MINC_IO_COORDINATE_FIX@

#endif
